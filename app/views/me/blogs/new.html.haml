- if @blog.errors.any?
  = render partial: 'alert_error', locals: { model: @blog }
= form_for :blog, method: 'post', url: me_user_blogs_path, html: { class: 'form-horizontal', role: 'form' } do |t|
  %h2 Create new blog
  = render partial: 'form', locals: { t: t}
  .form-group
    .col-sm-offset-3
      = t.submit 'Submit!', class: ['btn', 'btn-md', 'btn-primary']

