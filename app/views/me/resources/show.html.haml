%table.table.table-condensed
  %tr{align: "center"}
    %td.success
      %h3= "#{utf8_html(@resource.title.empty? ? '(not title)' : @resource.title)}(#{show_resource_state(@resource.state)})"
  %tr
    %td= @resource.avatar? ? image_tag(@resource.avatar_url) : image_tag("no.jpg")
  %tr
    %td.info introduction
  %tr
    %td= simple_format utf8(@resource.introduction)

%center
  - if @resource.prev(:me)
    = link_to "< Prev", me_user_resource_path(current_user, @resource.prev(:me)), class: ['btn','btn-sm', 'btn-warning']
  - if @resource.next(:me)
    = link_to "Next >", me_user_resource_path(current_user, @resource.next(:me)), class: ['btn', 'btn-sm', 'btn-info']

= link_to 'Edit', edit_me_user_resource_path(current_user, @resource)
\|
= link_to_function "Back", "history.back()"
