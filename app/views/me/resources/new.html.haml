- if @resource.errors.any?
  = render partial: 'alert_error', locals: { model: @resource }
= form_for :resource, method: 'post', url: me_user_resources_path, html: { class: 'form-horizontal', role: 'form' } do |t|
  %h2 Create new resource
  = render partial: 'form', locals: { t: t}
  .form-group
    .col-sm-offset-3
      = t.submit 'Submit!', class: ['btn', 'btn-md', 'btn-primary']

