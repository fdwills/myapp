- if @resource.errors.any?
  = render partial: 'alert_error', locals: { model: @resource }
= form_for :resource, method: 'put', url: me_user_resource_path(current_user, @resource), html: { class: 'form-horizontal', role: 'form' } do |t|
  %h2 Update resource
  = render partial: 'form', locals: { t: t}
  .form-group
    %br
    %center= t.submit 'Update', class: ['btn', 'btn-md', 'btn-primary']
