%table.table.table-condensed
  %tr
    %td.success
      %h3 #{utf8_html(@blog.title)}
  %tr
    -#%td= markdown(@blog.content)
    %td= simple_format markdown(@blog.content)

%center
  - if @blog.prev
    = link_to "< Prev", visitor_blog_path(@blog.prev), class: ['btn','btn-sm', 'btn-warning']
  - if @blog.next
    = link_to "Next >", visitor_blog_path(@blog.next), class: ['btn', 'btn-sm', 'btn-info']

- if login? && (current_user.id == @blog.user_id)
  = link_to 'Edit', edit_me_user_blog_path(current_user, @blog)
  \|
= link_to_function "Back", "history.back()"
