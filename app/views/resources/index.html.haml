%h1 Your Resource List
%table.table
  %tr
    %th title
    %th state
    %th type
    %th updated_at
    %th
    %th
    %th
  - @resources.try(:each) do |resource|
    %tr
      %td= resource.title
      %td= resource.state
      %td= resource.s_type
      %td= l resource.updated_at
      %td= link_to 'view', user_resource_path(current_user, resource)
      %td= link_to 'edit', edit_user_resource_path(current_user, resource)
      %td= link_to 'delete', user_resource_path(current_user, resource), :method => :delete, :data => { :confirm => 'Are you sure?' }
%center= paginate @resources

.pull-right
  = link_to 'New Resource', new_user_resource_path(current_user), class: ['btn', 'btn-primary']
